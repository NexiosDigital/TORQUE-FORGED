{
  "name": "torque-forged-motorsport",
  "version": "2.0.0",
  "description": "Blog ultra-rÃ¡pido de motorsport com React + Supabase",
  "keywords": [
    "motorsport",
    "f1",
    "nascar",
    "blog",
    "react",
    "supabase",
    "performance"
  ],
  "homepage": "https://torqueforged.com",
  "bugs": {
    "url": "https://github.com/Petronilha/torque-forged-motorsport/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Petronilha/torque-forged-motorsport.git"
  },
  "author": {
    "name": "Daniel Petronilha",
    "email": "daniel@torqueforged.com",
    "url": "https://github.com/Petronilha"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.17.19",
    "@tanstack/react-query-devtools": "^5.17.21",
    "lucide-react": "^0.316.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "^7.49.3",
    "react-hot-toast": "^2.4.1",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.21.3",
    "web-vitals": "^3.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.1",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:prod": "GENERATE_SOURCEMAP=false npm run build",
    "preview": "npx serve -s build -l 3000",
    "lint": "eslint src --ext .js,.jsx --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf build node_modules/.cache",
    "postinstall": "npm run clean-cache",
    "clean-cache": "rm -rf node_modules/.cache",
    "performance": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "react-hooks/exhaustive-deps": "warn",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "last 2 versions",
      "Chrome >= 88",
      "Firefox >= 85",
      "Safari >= 14",
      "Edge >= 88"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4",
  "overrides": {
    "react-scripts": {
      "typescript": "^5.3.3"
    }
  },
  "performance": {
    "bundlesize": [
      {
        "path": "./build/static/js/*.js",
        "maxSize": "300kb",
        "compression": "gzip"
      },
      {
        "path": "./build/static/css/*.css",
        "maxSize": "50kb",
        "compression": "gzip"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
